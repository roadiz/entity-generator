{
    "name": "roadiz/entity-generator",
    "description": "Roadiz sub-package which generate Doctrine entity classes for node-sources",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ambroise Maupate",
            "email": "ambroise@roadiz.io"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "roadiz/nodetype-contracts": "~1.1.0",
        "symfony/string": "^5.0.7",
        "symfony/yaml": "~4.4.1 || ^5.0.7",
        "symfony/serializer": "^5.1.11",
        "symfony/options-resolver": "~4.4.1 || ^5.0.7"
    },
    "suggest": {
        "api-platform/core": "If you need to create ApiFilter annotation right into your entities"
    },
    "autoload": {
        "psr-4": {
            "RZ\\Roadiz\\EntityGenerator\\": "src/",
            "tests\\mocks\\": "tests/mocks/"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phpstan/phpstan": "^1.5.3",
        "atoum/atoum": "^4.0",
        "api-platform/core": "~2.7.0"
    }
}
